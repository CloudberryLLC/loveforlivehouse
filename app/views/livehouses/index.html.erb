<div class="container">

	<h3 class="title">ライブハウス登録・管理</h3>

	<hr>

	<div id="make__new__group" class="button__area center">
		<h4 class="title">ライブハウスの新規登録</h4>
		<%= link_to "新規登録", new_user_livehouse_path(current_user), class:"btn btn-primary" %>
	</div>

	<hr>

	<div class="container">
		<h4 class="title">登録済みのライブハウス</h4>
		<div class="row">
			<% @groups.each do |group| %>
				<div class="col-md-6 padding__1em">
					<%= image_tag thumbnail(group.profile_photo), class:"profile-64round" %>
					<h5 class="inline margin-left-1em"><%= group.livehouse_name %></h5>
					<p>月間目標金額：<%= group.required_amount.to_s(:delimited) rescue 0 %>円</p>
						<p class="buttons">
					    <%= link_to "プレビュー", livehouse_path(group.id), class:"btn btn-primary" %>
					    <%= link_to "編集", edit_livehouse_path(group.id), class:"btn btn-info" %>
						</p>
				</div>
			<% end %>
		</div>
	</div>

</div>
