<div class="container">
	<div class="row">

		<% @groups.each do |group| %>

		<div class="col-md-3">

				<div class="card" >
					<%= image_tag photo(group.profile_photo.thumb.url), width:"100%", height:"100%" %>

				  <div class="card-block">
				    <h4 class="card-title"><%= group.performer_name %></h4>
				    <p class="card-text">区分：<%= group.performer_rank %></p>
				  </div>

				  <ul class="list-group list-group-flush">
				    <li class="list-group-item">活動エリア：<%= group.area %></li>
				    <li class="list-group-item">基本演奏料：<%= set_guarantee(group.basic_guarantee) %>円</li> <!--あとで(:delimited)にする-->
				  </ul>

				  <div class="card-block">
				    <%= link_to "編集", edit_performer_profile_path(group.id) %>
				    <%= link_to "プレビュー", performer_path(group.id) %>
				  </div>

				</div>

		</div>

		<% end %>

	</div>
</div>
