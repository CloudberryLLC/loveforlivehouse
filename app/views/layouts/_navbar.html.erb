          <li class="nav-item"><%= link_to "ダッシュボード", dashboard_path(current_user), class: "nav-link right" %></li>

          <% if current_user.certified == true %>
            <% if client? %>
              <li class="nav-item"><%= link_to "オファー", offers_path(current_user), class: "nav-link right" %></li>
              <li class="nav-item"><%= link_to "お気に入り", favorites_path(current_user), class: "nav-link right" %></li>
