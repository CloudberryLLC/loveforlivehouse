<div class="container pagetop">

<h2>ログイン(二段階認証)</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
  <div class="field">
    <%= f.label "二段階認証コード" %><br />
    <%= f.text_field :otp_attempt %>
  </div>

  <div class="button__area actions">
    <%= f.submit "ログイン", class:"btn btn-success" %>
  </div>
<% end %>

</div>
